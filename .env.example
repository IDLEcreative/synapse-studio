# API Configuration - Server-side only
# https://fal.ai/dashboard/keys
# IMPORTANT: This should NEVER be exposed to the client
FAL_KEY="your-fal-api-key-here"

# https://uploadthing.com required if you want to use file upload
UPLOADTHING_TOKEN="your-uploadthing-token-here"

# Supabase Configuration (if using Supabase)
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key-here"

# https://upstash.com required if you want to the share button
KV_URL=""
KV_REST_API_READ_ONLY_TOKEN=""
KV_REST_API_TOKEN=""
KV_REST_API_URL=""

# NextAuth Configuration (for authentication)
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="generate-with-openssl-rand-base64-32"

# Security Configuration
ALLOWED_ORIGINS="http://localhost:3000,https://yourdomain.com"

# Monitoring and Observability
# Sentry Configuration (for error tracking and performance monitoring)
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"
NEXT_PUBLIC_SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"

# Logging Configuration
LOG_LEVEL="info"  # debug, info, warn, error, silent
LOG_FORMAT="json"  # json or pretty (for production log aggregation)

# Feature Flags (optional environment-based overrides)
# FEATURE_FLAG_NEW_UI_DESIGN_ENABLED="true"
# FEATURE_FLAG_DEBUG_MODE_ENABLED="false"
# FEATURE_FLAG_MAX_FILE_SIZE_MB="150"
